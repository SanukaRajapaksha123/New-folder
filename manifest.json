{
  "manifest_version": 3,
  "name": "F1-F12 Key Blocker",
  "version": "1.0.0",
  "description": "Block browser default behaviors for F1-F12 function keys to enable custom key bindings",
  
  "permissions": [
    "storage",
    "activeTab"
  ],
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "F1-F12 Key Blocker",
    "default_icon": {
      "16": "icons/icon16.png"
   
    }
  },
  
  "icons": {
    "16": "icons/icon16.png"
   
  },
  
  "host_permissions": [
    "<all_urls>"
  ]
}